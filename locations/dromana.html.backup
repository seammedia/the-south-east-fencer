<script>
  // Mobile hamburger
  (()=>{
    const t=document.querySelector('.nav-toggle');
    const m=document.getElementById('site-menu');
    if(t&&m){t.addEventListener('click',()=>{const x=t.getAttribute('aria-expanded')==='true';t.setAttribute('aria-expanded',String(!x));m.setAttribute('aria-expanded',String(!x));});}
  })();

  // Dropdown (click + keyboard)
  (()=>{
    const dd=document.querySelector('.nav-dropdown');
    if(!dd) return;
    const btn=dd.querySelector('.nav-link-button');
    const panel=dd.querySelector('.dropdown-panel');
    function setOpen(open){
      dd.setAttribute('aria-expanded', String(open));
      btn.setAttribute('aria-expanded', String(open));
    }
    btn.addEventListener('click', (e)=>{ e.stopPropagation(); setOpen(dd.getAttribute('aria-expanded')!=='true'); });
    document.addEventListener('click', ()=> setOpen(false));
    btn.addEventListener('keydown', (e)=>{ if(e.key==='Escape') setOpen(false); });
    panel.addEventListener('keydown',(e)=>{ if(e.key==='Escape') setOpen(false); });
  })();

  // Mark active nav item
  (()=>{
    const path = window.location.pathname;
    const set = (key)=> {
      const el = document.querySelector(`[data-nav="${key}"]`);
      if(el) el.setAttribute('aria-current','page');
    };
    if (path === '/' || path === '/index.html') set('home');
    else if (path.endsWith('/about.html')) set('about');
    else if (path.endsWith('/contact.html')) set('contact');
    else if (path.startsWith('/locations/')) set('locations');
    else if (path.startsWith('/blog')) set('blog');
  })();
</script>

