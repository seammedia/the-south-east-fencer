    .section{padding:64px 20px}
    .two-col{max-width:1200px;margin:0 auto;display:grid;grid-template-columns:1fr 1fr;gap:48px;align-items:start}
    .media img{width:100%;height:auto;border-radius:12px;display:block}
    .content{max-width:65ch;color:var(--muted)}
    .content h1{font-size:clamp(28px,4vw,44px);line-height:1.1;color:var(--ink);margin-bottom:24px}
    .content p{font-size:16px;line-height:var(--line-height-relaxed);margin-bottom:20px;overflow-wrap:break-word;hyphens:auto}
